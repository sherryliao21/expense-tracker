<div class="container d-flex flex-column justify-content-center mt-5" style="width: 700px;">
  <div class="filter">
    <form action="/" class="row d-flex justify-content-between align-items-start">
      <select class="form-select mb-3 col-sm-6" style="width: 630px;" aria-label=".form-select-lg example"
        name="category">
        <option value="支出類別" name="" disabled selected>支出類別</option>
        <option value="housing" name="housing" {{#if (isSelected category 'housing' ) }}selected{{/if}}>家居物業</option>
        <option value="transportation" name="transportation" {{#if (isSelected category 'transportation' )
          }}selected{{/if}}>
          交通出行</option>
        <option value="entertainment" name="entertainment" {{#if (isSelected category 'entertainment' )
          }}selected{{/if}}>
          休閒娛樂</option>
        <option value="food" name="food" {{#if (isSelected category 'food' ) }}selected{{/if}}>餐飲食品</option>
        <option value="others" name="others" {{#if (isSelected category 'others' ) }}selected{{/if}}>其他</option>
      </select>
      <button class="btn col-sm-1" style="background-color: rgb(245, 176, 97); color: #fff;" type="submit">篩選</button>
    </form>
  </div>
  <div class="d-flex justify-content-between mt-3 row">
    <div class="col-sm-4">
      <h2 id="total-amount" style="font-size: 28px; color: rgb(19, 168, 148);">總金額：</h2>
    </div>
    <div class="col-sm-8">
      <h1 id="total-amount-display" style="font-size: 70px; margin-left: 80px; color: rgb(245, 176, 97);">0</h1>
    </div>
  </div>
  <div class="records mt-3">
    <ul class="list-group d-flex flex-column justify-content-center">
      <a href="./records/new" style="text-decoration: none;">
        <li class="list-group-item d-flex row justify-content-between align-items-center"
          style="background-color: rgb(250, 249, 249);">
          <div class="col-sm-1"></div>
          <div class="col-sm-8">
            <h2 style="font-size: 20px; color: rgb(179, 176, 176);">點擊新增支出項目</h2>
            <h3 style=" font-size: 12px; color: rgb(179, 176, 176);">新增日期</h3>
          </div>
          <div class="col-sm-1 d-flex justify-content-end">
            <h2 style="font-size: 24px; color: rgb(179, 176, 176);">$$$</h2>
          </div>
          <div class="col-sm-1 d-flex justify-content-between">
            <i class="fas fa-plus-circle" style="font-size: 20px; color: rgb(179, 176, 176);"></i>
          </div>
        </li>
      </a>
      {{#each records}}
      <li class="list-group-item d-flex row justify-content-between align-items-center">
        <div class="col-sm-1">
          <i class="{{ this.icon }}" style="font-size: 20px; color: rgb(19, 168, 148);"></i>
        </div>
        <div class="col-sm-8 d-flex flex-column justify-content-center">
          <h2 style="font-size: 20px;">{{ this.name }}</h2>
          <h3 style="font-size: 12px;">{{ this.date }}</h3>
        </div>
        <div class="individual-amount col-sm-1 d-flex justify-content-end">
          <h2 style="font-size: 24px;">{{ this.amount }}</h2>
        </div>
        <div class="col-sm-1 d-flex justify-content-between">
          <a href="./records/{{ this._id }}/edit" style="color:rgb(24, 165, 146); text-decoration: none;"><i
              class="far fa-edit"></i></a>
          <form action="/records/{{ this._id }}/delete" method="POST">
            <button type="submit" class="btn"
              style="color:rgb(245, 176, 97); position: relative; bottom: 6px;">X</button>
          </form>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
