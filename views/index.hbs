<nav class="navbar navbar-secondary" style="background-color: rgb(24, 165, 146);">
  <div class="container-fluid">
    <a class="navbar-brand" href="#" style="text-decoration: none; color: #fff"><i class="fas fa-wallet"
        style="margin-right: 8px;"></i>老爸的私房錢</a>
  </div>
</nav>
<div class="container d-flex flex-column justify-content-center mt-5" style="width: 700px;">
  <div class="sort">
    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
      <option selected>支出類別</option>
      <option value="housing" name="housing">家居物業</option>
      <option value="transportation" name="transportation">交通出行</option>
      <option value="entertainment" name="entertainment">休閒娛樂</option>
      <option value="food" name="food">餐飲食品</option>
      <option value="others" name="others">其他</option>
    </select>
  </div>
  <div class="total-amount d-flex justify-content-between mt-3 row">
    <div class="col-sm-4">
      <h2 style="font-size: 28px;">總金額：</h2>
    </div>
    <div class="col-sm-8">
      <h1 id="total-amount-display" style="font-size: 70px; margin-left: 80px; color: rgb(245, 176, 97);">25260</h1>
    </div>
  </div>
  <div class="records mt-3">
    <ul class="list-group d-flex flex-column justify-content-center">
      {{#each records}}
      <li class="list-group-item d-flex row justify-content-between align-items-center">
        <div class="col-sm-1">
          <i class="{{ this.icon }}" style="font-size: 20px; color: rgb(19, 168, 148);"></i>
        </div>
        <div class="col-sm-8">
          <h2 style="font-size: 20px;">{{ this.name }}</h2>
          <h3 style="font-size: 12px;">{{ this.date }}</h3>
        </div>
        <div class="col-sm-1 d-flex justify-content-end">
          <h2 style="font-size: 24px;">{{ this.amount }}</h2>
        </div>
        <div class="col-sm-1 d-flex justify-content-between">
          <a href="/edit" style="color:rgb(24, 165, 146); text-decoration: none;"><i class="far fa-edit"></i></a>
          <a href="/delete" style="color:rgb(245, 176, 97); text-decoration: none; margin-left: 15px;">X</a>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="button d-flex justify-content-center">
    <button class="create btn mt-4"
      style="width: 100px; background-color: rgb(24, 165, 146); color: #fff;">新增支出</button>
  </div>
</div>